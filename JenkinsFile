pipeline {
    agent any

    stages {

        stage('Clonar código') {
            steps {
                // Asegúrate de que esta URL y rama sean correctas
                git url: 'https://github.com/YANETHTRUJILLO/LaGranFeria_delJuguete', branch: 'main'
            }
        }

        stage('Limpiar contenedores anteriores') {
            steps {
                sh '''
                    echo "Ejecutando limpieza previa..."

                    # Baja y elimina todos los servicios del docker-compose
                    docker-compose down --remove-orphans || true
                    
                    # *** IMPORTANTE: Eliminamos la imagen de tests para forzar la reconstrucción total ***
                    # Esto asegura que el nuevo Dockerfile (con composer install) se use.
                    docker rmi $(docker images -q | grep granferia_tests) || true

                    # Elimina posibles contenedores huérfanos con container_name fijo
                    docker stop granferia_db || true
                    docker stop granferia_web || true
                    docker stop granferia_tests || true

                    docker rm granferia_db || true
                    docker rm granferia_web || true
                    docker rm granferia_tests || true

                    echo "Limpieza completada"
                '''
            }
        }

        stage('Construir imágenes') {
            steps {
                sh '''
                    echo "Construyendo imágenes..."
                    # Usamos 'up' con --build y --force-recreate para ser agresivos y asegurar
                    # que el nuevo Dockerfile se ejecute y se cree la carpeta 'vendor'.
                    docker-compose up -d --build --force-recreate
                '''
            }
        }

        stage('Ejecutar pruebas PHPUnit') {
            steps {
                sh '''
                    echo "Ejecutando pruebas PHPUnit..."
                    # Este comando FINAL asume que vendor/bin/phpunit YA existe dentro de la imagen.
                    docker-compose run --rm --entrypoint="" -w /var/www/html tests vendor/bin/phpunit --coverage-clover coverage.xml
                '''
            }
        }

        stage('Subir cobertura a Codecov') {
            steps {
                withCredentials([string(credentialsId: 'CODECOV_TOKEN', variable: 'TOKEN')]) {
                    sh '''
                        echo "Subiendo cobertura a Codecov..."
                        # Ejecuta el script de Codecov.
                        # NOTA: Si este paso falla por no encontrar 'coverage.xml', necesitaremos un 'docker cp' antes.
                        
                        bash <(curl -s https://codecov.io/bash) \
                            -t $TOKEN \
                            -f coverage.xml \
                            -F php
                    '''
                }
            }
        }

        stage('Levantar aplicación') {
            steps {
                sh '''
                    echo "Levantando aplicación..."
                    docker-compose up -d --force-recreate
                '''
            }
        }
    }

    post {
        always {
            echo 'Pipeline finalizado correctamente.'
        }
    }
}