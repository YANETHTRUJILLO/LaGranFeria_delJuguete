pipeline {

    agent any

    stages {

        stage('Limpiar Workspace') {
            steps {
                cleanWs()
            }
        }

        stage('Clonar código') {
            steps {
                git url: 'https://github.com/YANETHTRUJILLO/LaGranFeria_delJuguete', branch: 'main'
                sh 'ls -al'
            }
        }

        stage('Docker Down') {
            steps {
                dir("${WORKSPACE}") {
                    sh 'docker-compose down --remove-orphans || true'
                }
            }
        }

        stage('Construir imágenes') {
            steps {
                dir("${WORKSPACE}") {
                    sh 'docker-compose build --no-cache'
                }
            }
        }

        stage('Instalar dependencias PHP') {
            steps {
                dir("${WORKSPACE}") {
                    sh '''
                        echo "Instalando dependencias..."
                        docker-compose run --rm --user root tests composer install
                    '''
                }
            }
        }

        stage('Ejecutar pruebas') {
            steps {
                dir("${WORKSPACE}") {
                    sh '''
                        docker-compose run --rm tests vendor/bin/phpunit \
                        --coverage-clover=coverage.xml
                    '''
                }
            }
        }

        stage('Subir cobertura a Codecov') {
            steps {
                dir("${WORKSPACE}") {
                    withCredentials([string(credentialsId: 'CODECOV_TOKEN', variable: 'TOKEN')]) {
                        sh '''
                            bash <(curl -s https://codecov.io/bash) \
                                -t $TOKEN \
                                -f coverage.xml \
                                -F php
                        '''
                    }
                }
            }
        }

        stage('Levantar aplicación') {
            steps {
                dir("${WORKSPACE}") {
                    sh 'docker-compose up -d web'
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline finalizado.'
        }
    }
}