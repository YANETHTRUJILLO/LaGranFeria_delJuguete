pipeline {
  agent any
  stages {
    stage('Checkout') {
      steps {
        git url: 'https://github.com/YANETHTRUJILLO/LaGranFeriaDelJuguete', branch: 'main'
      }
    }
    stage('Build and Run Docker') {
      steps {
        sh 'docker-compose down || true'
        sh 'docker-compose up -d --build'
      }
    }
  }
}